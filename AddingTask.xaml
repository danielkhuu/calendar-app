<Window x:Class="CalendarApp.AddingTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarApp"
        mc:Ignorable="d"
        Title="AddingTask" SizeToContent="WidthAndHeight" MinHeight="400" MinWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".05*"/>
            <RowDefinition Height=".05*"/>
            <RowDefinition Height=".05*"/>
            <RowDefinition Height=".05*"/>
            <RowDefinition Height=".45*"/>
            <RowDefinition Height=".05*"/>

        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="1" Text="Add A Task:" Padding="10,0"/>
        <TextBox Grid.Row="2" Margin="10, 0"
            x:Name="TaskName"
            MinWidth="250"
            MaxHeight="20"
            HorizontalAlignment="Left" TextChanged="TaskName_TextChanged"
            VerticalAlignment="Top"
            />
        <TextBlock Grid.Row="3" Text="Add A Description:" Padding="10,0"/>
        <TextBox Grid.Row="4" Margin="10, 0"
            x:Name="TaskDescription"
            MinWidth="250"
            Height="100"
            HorizontalAlignment="Left" TextChanged="TaskName_TextChanged"
            VerticalAlignment="Top"
            />
        <Button Grid.Row="5" Margin="10"
            x:Name="SaveTask" 
            Width="75"
            Height="20"
            HorizontalAlignment="Right"
            Click="SaveTask_Click"
            Content="Save"
            />
        
    </Grid>
</Window>
