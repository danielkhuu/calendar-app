<Window x:Class="CalendarApp.SearchTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarApp"
        mc:Ignorable="d"
        Title="SearchTask" Height="200" Width="400" ResizeMode="NoResize">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height=".7*"/>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height=".7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Search Task Name" Padding="10,10"/>
        <TextBox Grid.Row="1"
                 Margin="10,10,0,0"
                 x:Name="SearchName"
                 MinWidth="365"
                 MaxHeight="20" TextChanged="SearchName_TextChanged"
                 HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <TextBlock Grid.Row="2" Text="Search Date" Padding="10,10"/>
        <TextBox Grid.Row="3" MinWidth="150" MaxHeight="20" 
                 Margin="10,0"
                 x:Name="SearchDate" HorizontalAlignment="Left" VerticalAlignment="Center"
                 TextChanged="SearchDate_TextChanged"/>

        <Button Grid.Row="4" 
        x:Name="SearchingTask" 
        Width="75"
        Height="20"
        Margin="100,0,0,10"
        HorizontalAlignment="Left"
        VerticalAlignment="Bottom"
        Click="SearchTask_Click"
        Content="Search" 
        />
        <Button Grid.Row="4" 
        x:Name="CancelTask"
        Width="75" Height="20"
        Margin="0,0,100,10"
        HorizontalAlignment="Right" VerticalAlignment="Bottom"
        Click="CancelTask_Click"
        Content="Cancel"
        />
    </Grid>
</Window>
